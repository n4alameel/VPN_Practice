        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="LocationWindow" Height="800" Width="600" WindowStyle="None">
    <Grid>
        <Button x:Name="Close" Content="x" HorizontalAlignment="Left" Margin="519,10,-0.4,0" VerticalAlignment="Top" Width="75" Click="Close_Click"/>
        <Button x:Name="Minimize" Content="_" HorizontalAlignment="Left" Margin="444,10,0,0" VerticalAlignment="Top" Width="75" Click="Minimize_Click"/>
        <Button x:Name="Hide" Content="x" HorizontalAlignment="Left" Margin="509,92,0,0" VerticalAlignment="Top" Width="75" Click="Hide_Click"/>
        <TabControl HorizontalAlignment="Left" Height="409" Margin="45,193,0,0" VerticalAlignment="Top" Width="520">
            <TabItem Header="TabItem" Margin="180,0,-183.4,-2.2">
                <Grid Background="#FFE5E5E5" Margin="0,-2,-113,0.4"/>
            </TabItem>
            <TabItem Header="TabItem" Margin="184.4,0,-189.6,-2">
                <Grid Background="#FFE5E5E5"/>
            </TabItem>
        </TabControl>

    </Grid>
</Window>
